function data_path = data_path(pdf)

%return data path for pdf

%if something is wrong return empty string
data_path = '';

%get data drives ('/home/whsbti/data/comeg1_data0' and so on)
dataN = get_data_drives;
if isempty(dataN)
    return
end

%id = {patien_id, scan_id, session_id, run_id, pdf_id})
id = {
    get(pdf, 'patient')
    get(pdf, 'scan')
    session2dir(get(pdf, 'session'))
    get(pdf, 'run')
    get(pdf, 'pdf')
    };

%search data drives for pdf
for di=1:numel(dataN)
    full_path = fullfile(dataN{di}, ...
        id{1}, id{2}, id{3}, id{4}, id{5});
    if exist(full_path, 'file')==2
        data_path = full_path;
    end
end